{
  "name": "drift-e3-bot",
  "version": "0.8.0",
  "description": "Advanced trading bot for Drift Protocol with LoRA-enhanced AI and real-time risk management",
  "license": "MIT",
  "author": "Rick Richman",
  "repository": {
    "type": "git",
    "url": "https://github.com/FastyFresh/drift-e3-bot.git"
  },
  "keywords": [
    "trading",
    "bot",
    "drift",
    "solana",
    "ai",
    "lora",
    "defi"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "// Development": "",
    "dev": "nodemon --exec ts-node --transpile-only src/main.ts",
    "start": "ts-node --transpile-only src/main.ts",
    "build": "tsc",
    "clean": "rm -rf dist node_modules/.cache",
    "cleanup": "chmod +x scripts/cleanup.sh && ./scripts/cleanup.sh",
    "// Testing & Quality": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "// Trading Operations": "",
    "bot:start": "ts-node --transpile-only src/main.ts",
    "bot:start:legacy": "ts-node --transpile-only src/index.ts",
    "bot:backtest": "ts-node --transpile-only src/scripts/backtest.ts",
    "bot:backtest:legacy": "ts-node --transpile-only src/backtest.ts",
    "bot:optimize": "node --expose-gc --max-old-space-size=8192 -r ts-node/register/transpile-only src/scripts/optimize.ts",
    "bot:optimize:legacy": "node --expose-gc --max-old-space-size=8192 -r ts-node/register/transpile-only src/optimize.ts",
    "bot:optimize:memory": "node --expose-gc --max-old-space-size=4096 -r ts-node/register/transpile-only src/scripts/optimize.ts",
    "// Analysis & Monitoring": "",
    "analyze:equity": "ts-node --transpile-only src/checkEquity.ts",
    "analyze:leverage": "ts-node --transpile-only src/leverageAnalysis.ts",
    "analyze:visualize": "ts-node --transpile-only src/visualize.ts",
    "// Dashboard": "",
    "dashboard": "./dashboard/start-dashboard.sh",
    "dashboard:backend": "cd dashboard/backend && npm run dev",
    "dashboard:frontend": "cd dashboard/frontend && npm start",
    "dashboard:build": "cd dashboard/backend && npm run build && cd ../frontend && npm run build",
    "// LoRA Training": "",
    "training:setup": "python3 -m venv training_env && source training_env/bin/activate && pip install -r training/requirements.txt",
    "training:prepare": "source training_env/bin/activate && python training/scripts/prepare_data.py",
    "training:train": "source training_env/bin/activate && python training/scripts/train_lora.py",
    "training:evaluate": "source training_env/bin/activate && python training/scripts/evaluate_model.py",
    "training:all": "npm run training:prepare && npm run training:train && npm run training:evaluate",
    "// Legacy Aliases": "",
    "backtest": "npm run bot:backtest",
    "optimize": "npm run bot:optimize",
    "visualize": "npm run analyze:visualize"
  },
  "dependencies": {
    "@drift-labs/sdk": "^2.134.0",
    "@solana/web3.js": "^1.95.3",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "bs58": "^6.0.0",
    "dotenv": "^16.6.1",
    "node-fetch": "^3.3.2",
    "plotly.js-dist-min": "^3.1.0",
    "rpc-websockets": "^7.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bn.js": "^5.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.1",
    "jest-environment-node": "^30.1.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
